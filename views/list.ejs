    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1 class="">It is a <%= day %>
        </h1>
    </div>

    <div class="box">
        <% for(let i=0; i<newItem.length; i++) { if(newItem[i]==="" ) break; else { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newItem[i] %>
                </p>
            </div>
            <% } } %>

                <form class="item" action="/" method="post">
                    <input type="text" class="" placeholder="New task" name="newItem" autocomplete="off">
                    <button type="submit" name="button">+</button>
                </form>
    </div>

